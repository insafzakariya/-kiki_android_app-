<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen.0.25.x"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen.1.x"
    android:paddingTop="@dimen/dimen.1.x">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPackageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_package_opened" />

    <TextView
        android:id="@+id/textViewPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dimen.2.x"
        android:text="[Video Name]"
        android:textStyle="bold"></TextView>

</LinearLayout>