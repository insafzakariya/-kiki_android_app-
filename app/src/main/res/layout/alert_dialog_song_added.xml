<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#FAFAFA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_18sdp"

        android:layout_marginTop="@dimen/_18sdp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <lk.mobilevisions.kiki.audio.util.KikiAudioBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:padding="@dimen/_2sdp"
                android:text="Successfully Added"
                android:textColor="#de000000"
                android:textSize="@dimen/_20sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/_8sdp">

            <lk.mobilevisions.kiki.audio.util.KikiAudioMediumTextView
                android:id="@+id/greeting_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:text="Song successfully added to the playlist"
                android:textColor="#8a000000"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_17sdp">


            <lk.mobilevisions.kiki.audio.util.KikiAudioMediumTextView
                android:id="@+id/ok_button_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:padding="@dimen/_2sdp"
                android:text="OK"
                android:textColor="@color/see_all"
                android:textSize="@dimen/_15sdp" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
