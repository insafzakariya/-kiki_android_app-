                app:layout_constraintTop_toBottomOf="@+id/sinhala_text_view" />


            <View
                android:id="@+id/language_line_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/audioSettingsLineColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tamil_text_view" />

            <RelativeLayout
                android:id="@+id/update_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="42dp"
                android:gravity="center"
                android:layout_marginStart="42dp"
                android:background="@drawable/round_corner_background_settings_update_button"
                app:layout_constraintTop_toBottomOf="@+id/language_line_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <lk.mobilevisions.kiki.audio.util.KikiAudioBoldTextView
                    android:id="@+id/update_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/update_now"
                    android:textColor="@color/md_white_1000"
                    android:textSize="@dimen/_14sdp" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/english_select_imageview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/english_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/english_text_view"
                app:srcCompat="@drawable/select" />
            <ImageView
                android:id="@+id/sinhala_select_imageview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/sinhala_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sinhala_text_view"
                app:srcCompat="@drawable/select" />
            <ImageView
                android:id="@+id/tamil_select_imageview"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tamil_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tamil_text_view"
                app:srcCompat="@drawable/select" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/aviProgress"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:indicatorName="BallSpinFadeLoaderIndicator"
                app:indicatorColor="@color/colorPrimary"/>


